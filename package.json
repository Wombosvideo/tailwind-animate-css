{
  "name": "tw-animate-css",
  "version": "1.2.2",
  "description": "TailwindCSS v4.0 compatible replacement for `tailwindcss-animate`.",
  "scripts": {
    "build": "pnpx @tailwindcss/cli -i ./src/tw-animate.css -o ./dist/tw-animate.css -m",
    "format": "prettier --write --ignore-unknown *"
  },
  "main": "./dist/tw-animate.css",
  "exports": "./dist/tw-animate.css",
  "files": [
    "dist"
  ],
  "keywords": [
    "accordion",
    "animate",
    "animation",
    "css",
    "fades",
    "opacity",
    "scale",
    "shadcn",
    "slide",
    "spin",
    "tailwind-animate",
    "tailwind",
    "tailwindcss-animate",
    "tailwindcss",
    "transform",
    "transition",
    "translate",
    "zoom"
  ],
  "author": {
    "name": "Luca Bosin",
    "url": "https://github.com/Wombosvideo"
  },
  "license": "MIT",
  "homepage": "https://github.com/Wombosvideo/tw-animate-css",
  "bugs": {
    "url": "https://github.com/Wombosvideo/tw-animate-css/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Wombosvideo/tw-animate-css.git"
  },
  "packageManager": "pnpm@10.6.3",
  "devDependencies": {
    "prettier": "^3.5.3"
  }
}
